@model List<FoodOrderApp.Models.CartItem>

<div class="modal-header bg-dark text-white">
    <h5 class="modal-title"><i class="bi bi-cart4 me-2"></i> Your Delicious Picks</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    @if (!Model.Any())
    {
        <p class="text-muted text-center">🛒 Your cart is empty. Time to grab something tasty!</p>
    }
    else
    {
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Item</th>
                    <th class="text-center">Qty</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.FoodItem.Name</strong><br />
                            <small class="text-muted">@item.FoodItem.Ingredients</small>
                        </td>
                        <td class="text-center">
                            <div class="input-group input-group-sm justify-content-center">
                                <button class="btn btn-outline-secondary" onclick="updateQuantity(@item.Id, @item.Quantity - 1)">-</button>
                                <input type="text" class="form-control text-center" value="@item.Quantity" readonly style="width: 40px;" />
                                <button class="btn btn-outline-secondary" onclick="updateQuantity(@item.Id, @item.Quantity + 1)">+</button>
                            </div>
                        </td>
                        <td>₹@item.FoodItem.DiscountedPrice.ToString("F2")</td>
                        <td>₹@((item.Quantity * item.FoodItem.DiscountedPrice).ToString("F2"))</td>
                        <td>
                            <button class="btn btn-outline-danger btn-sm" onclick="removeItem(@item.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between fw-semibold mt-3">
            <span>Total Items: @Model.Sum(i => i.Quantity)</span>
            <span class="fs-5">Grand Total: ₹@Model.Sum(i => i.Quantity * i.FoodItem.DiscountedPrice).ToString("F2")</span>
        </div>
    }
</div>

<div class="modal-footer">
    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">
        <i class="bi bi-lock"></i> Continue Shopping
    </button>
    @if (Model.Any())
    {
        <button class="btn btn-success">
            <i class="bi bi-check-square"></i> Proceed to Checkout
        </button>
    }
</div>